<div class="container">
  <h2 class="mt-4 mb-4">You have created <%= @stories.count %> stories for <%= @business.name %> business.</h1>
  <% @stories.each do |story| %>

    <div class="col-md-3">
      <% story.photos.each do |photo| %>
        <%= cl_image_tag photo.key, class: 'story-cover-photo' %>
        <div class="col-md-9 mt-3 mb-5">
          <h3 class="white"><%= link_to story.title, story_path(story) %></h3>
          <p class="white"><%= link_to story.description, story_path(story) %></p>

        </div>
        <% end %>
    </div>

  <% end %>
</div>
