<div class="container">
<%= simple_form_for([@creator]) do |f| %>
  <%= f.input :stage_name, required: true, placeholder: 'Enter your stage_name' %>
  <%= f.input :description, as: :text, required: true, placeholder: 'Describe your creator in 260 characters' %>
  <%= f.input :website, as: :text, required: true, placeholder: 'Enter the link of your website' %>
  <%= f.input :logo, as: :file, required: true %>
  <%= f.button :submit, class: 'btn-dark' %>
<% end %>
</div>
