<% @skip_navbar %>
<% @skip_footer %>

<div class="container">
  <h1 class="text-custom-dark">Edit your brand</h1>
  <h4 class="text-custom-dark">What information would you like to change?</h4>
</div>
<div class="mt-3 mb-5 w-100">
  <%# <%= render 'form', business: @business %>
  <div class="container">
    <%= simple_form_for @business do |f| %>
      <%= f.input :name, required: true, placeholder: 'Enter the name of your business' %>
      <%= f.input :logo, as: :file, required: true %>
      <%= f.input :description, as: :text, required: true, placeholder: 'Describe your business in 260 characters' %>
      <%= f.input :website, as: :text, required: true, placeholder: 'Enter the link of your website' %>
      <div class="d-flex justify-content-center">
      <%= f.button :submit, class: 'btn btn-custom btn-custom-dark mt-3' %>
      </div>
    <% end %>
</div>

</div>
